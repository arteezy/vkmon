<div class='row'>
  <div class='col-sm-8'>
    <%= form_for @watcher, html: { class: 'form-inline' } do |f| %>
      <div class='form-group'>
        <%= f.text_field :vk_id, class: 'form-control', placeholder: 'VK ID' %>
      </div>
      <div class='form-group'>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Full Name' %>
      </div>
      <div class='form-group'>
        <%= f.text_field :photo, class: 'form-control', placeholder: 'Photo' %>
      </div>
      <%= f.submit 'Create', class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>

<div class='row'>
  <div class='col-sm-12'>
    <div class='table-responsive'>
      <table class='table table-striped table-hover'>
        <thead>
          <tr>
            <th>VK ID</th>
            <th>Name</th>
            <th>Friends</th>
            <th>Destroy?</th>
          </tr>
        </thead>
        <tbody>
          <% @watchers.each do |watcher| %>
            <tr>
              <td><%= link_to watcher.vk_id, watcher %></td>
              <td><%= watcher.name %></td>
              <td><%= watcher.friends.size %></td>
              <td><%= link_to 'Destroy', watcher, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= link_to 'Back', request.referrer || root_path, class: 'btn btn-warning' %>
